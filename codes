#include <iostream>
#include <string>
#include <fstream>

using namespace std;

int main() {
	
	string filename,fortxt,fordoc,fordocx,line;
	int c=0;
	int w=0;
	cout<< "Please enter a file name." <<endl;
	
	
	getline( cin, filename );
	fortxt=filename+".txt";
	fordoc=filename+".doc";
	fordocx=filename+".docx";
		
	fstream file( fortxt.c_str() );
	if( !file )
	{
		fstream file( fordoc.c_str() );
		if( !file ) 
		{
			fstream file( fordocx.c_str() );
			if( !file )
			{
				cout<<"This file doesn't exist!";
			}
			else
			{
				while ( file>>line )
				{
					c+=line.length();
					w++;		
				}
				cout<<"Number of words="<<w<<endl;
				cout<<"Number of characters="<<c<<endl;
			}
		}
		else
		{
			while ( file>>line )
			{	
				c+=line.length();
				w++;		
			}
			cout<<"Number of words="<<w<<endl;
			cout<<"Number of characters="<<c<<endl;
		}
	}			
	else
	{
		while ( file>>line )
		{
			c+=line.length();
			w++;		
		}
		cout<<"Number of words="<<w<<endl;
		cout<<"Number of characters="<<c<<endl;
	}
	
	
	
	return 0;
}
